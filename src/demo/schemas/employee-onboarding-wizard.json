{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "meta": {
    "id": "employee-onboarding-wizard",
    "version": "1.0.0",
    "title": "Employee Onboarding Wizard",
    "mode": "create",
    "description": "Multi-step wizard for new employee onboarding"
  },
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "title": "First Name",
      "minLength": 2,
      "ui": {
        "widget": "text",
        "placeholder": "Enter first name",
        "width": 6
      }
    },
    "lastName": {
      "type": "string",
      "title": "Last Name",
      "minLength": 2,
      "ui": {
        "widget": "text",
        "placeholder": "Enter last name",
        "width": 6
      }
    },
    "email": {
      "type": "string",
      "title": "Email Address",
      "format": "email",
      "ui": {
        "widget": "text",
        "placeholder": "employee@company.com",
        "width": 6
      }
    },
    "phone": {
      "type": "string",
      "title": "Phone Number",
      "pattern": "^[0-9\\-\\+\\(\\)\\s]+$",
      "ui": {
        "widget": "text",
        "placeholder": "+44 20 1234 5678",
        "width": 6
      }
    },
    "department": {
      "type": "string",
      "title": "Department",
      "enum": ["Engineering", "Finance", "Legal", "Compliance", "Operations", "HR"],
      "ui": {
        "widget": "select",
        "placeholder": "Select department",
        "width": 6
      }
    },
    "position": {
      "type": "string",
      "title": "Position",
      "ui": {
        "widget": "text",
        "placeholder": "Job title",
        "width": 6
      }
    },
    "startDate": {
      "type": "string",
      "title": "Start Date",
      "format": "date",
      "ui": {
        "widget": "date",
        "width": 6
      }
    },
    "employmentType": {
      "type": "string",
      "title": "Employment Type",
      "enum": ["Full-time", "Part-time", "Contract", "Internship"],
      "ui": {
        "widget": "select",
        "placeholder": "Select type",
        "width": 6
      }
    },
    "addressLine1": {
      "type": "string",
      "title": "Address Line 1",
      "ui": {
        "widget": "text",
        "placeholder": "Street address",
        "width": 12
      }
    },
    "addressLine2": {
      "type": "string",
      "title": "Address Line 2",
      "ui": {
        "widget": "text",
        "placeholder": "Apartment, suite, etc. (optional)",
        "width": 12
      }
    },
    "city": {
      "type": "string",
      "title": "City",
      "ui": {
        "widget": "text",
        "placeholder": "City",
        "width": 6
      }
    },
    "postcode": {
      "type": "string",
      "title": "Postcode",
      "pattern": "^[A-Z]{1,2}[0-9R][0-9A-Z]? [0-9][A-Z]{2}$",
      "ui": {
        "widget": "text",
        "placeholder": "SW1A 1AA",
        "width": 6
      }
    },
    "emergencyContactName": {
      "type": "string",
      "title": "Emergency Contact Name",
      "ui": {
        "widget": "text",
        "placeholder": "Full name",
        "width": 6
      }
    },
    "emergencyContactPhone": {
      "type": "string",
      "title": "Emergency Contact Phone",
      "ui": {
        "widget": "text",
        "placeholder": "+44 20 1234 5678",
        "width": 6
      }
    },
    "emergencyContactRelationship": {
      "type": "string",
      "title": "Relationship",
      "enum": ["Spouse", "Parent", "Sibling", "Friend", "Other"],
      "ui": {
        "widget": "select",
        "placeholder": "Select relationship",
        "width": 12
      }
    },
    "bankName": {
      "type": "string",
      "title": "Bank Name",
      "ui": {
        "widget": "text",
        "placeholder": "Enter bank name",
        "width": 12
      }
    },
    "accountNumber": {
      "type": "string",
      "title": "Account Number",
      "pattern": "^[0-9]{8}$",
      "ui": {
        "widget": "text",
        "placeholder": "12345678",
        "width": 6
      }
    },
    "sortCode": {
      "type": "string",
      "title": "Sort Code",
      "pattern": "^[0-9]{2}-[0-9]{2}-[0-9]{2}$",
      "ui": {
        "widget": "text",
        "placeholder": "12-34-56",
        "width": 6
      }
    },
    "termsAccepted": {
      "type": "boolean",
      "title": "I accept the terms and conditions",
      "ui": {
        "widget": "checkbox",
        "width": 12
      }
    },
    "dataProcessingConsent": {
      "type": "boolean",
      "title": "I consent to processing of my personal data",
      "ui": {
        "widget": "checkbox",
        "width": 12
      }
    }
  },
  "required": [
    "firstName",
    "lastName",
    "email",
    "phone",
    "department",
    "position",
    "startDate",
    "employmentType",
    "addressLine1",
    "city",
    "postcode",
    "emergencyContactName",
    "emergencyContactPhone",
    "bankName",
    "accountNumber",
    "sortCode",
    "termsAccepted",
    "dataProcessingConsent"
  ],
  "layout": {
    "wizard": {
      "steps": [
        {
          "id": "personal",
          "title": "Personal Information",
          "description": "Basic details about the employee",
          "fields": ["firstName", "lastName", "email", "phone"],
          "allowIncomplete": false
        },
        {
          "id": "employment",
          "title": "Employment Details",
          "description": "Position and department information",
          "fields": ["department", "position", "startDate", "employmentType"],
          "allowIncomplete": true
        },
        {
          "id": "address",
          "title": "Address",
          "description": "Residential address",
          "fields": ["addressLine1", "addressLine2", "city", "postcode"],
          "allowIncomplete": true
        },
        {
          "id": "emergency",
          "title": "Emergency Contact",
          "description": "Someone to contact in case of emergency",
          "fields": ["emergencyContactName", "emergencyContactPhone", "emergencyContactRelationship"],
          "allowIncomplete": true
        },
        {
          "id": "banking",
          "title": "Bank Details",
          "description": "For salary payments",
          "fields": ["bankName", "accountNumber", "sortCode"],
          "allowIncomplete": false
        },
        {
          "id": "consent",
          "title": "Terms & Consent",
          "description": "Legal agreements and consent",
          "fields": ["termsAccepted", "dataProcessingConsent"],
          "allowIncomplete": false
        }
      ]
    }
  }
}
